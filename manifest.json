{
  "manifest_version": 3,
  "name": "T212 - Hover Notes by Kashub",
  "version": "1.0",
  "description": "Add hoverable notes to stock tickers on the T212 platform.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.trading212.com/*"
  ],
  "action": {
    "default_title": "T212 - Hover Notes by Kashub",
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.trading212.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}